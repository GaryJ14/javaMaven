<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
         https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>com.ismaMaven</groupId>
  <artifactId>simple-eclipse-maven</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <name>IsmaEclipseMaven</name>
  <description>CrudMavenEclipse</description>

  <!-- Propiedades -->
  <properties>
      <maven.compiler.source>21</maven.compiler.source>
      <maven.compiler.target>21</maven.compiler.target>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <!-- Dependencias -->
  <dependencies>

      <!-- Driver PostgreSQL -->
      <dependency>
          <groupId>org.postgresql</groupId>
          <artifactId>postgresql</artifactId>
          <version>42.7.3</version>
      </dependency>

  </dependencies>

  <!-- ConfiguraciÃ³n del compilador -->
  <build>
      <plugins>
          <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-compiler-plugin</artifactId>
              <version>3.11.0</version>
              <configuration>
                  <release>21</release>
              </configuration>
          </plugin>
          
          <plugin>
			  <groupId>org.codehaus.mojo</groupId>
			  <artifactId>exec-maven-plugin</artifactId>
			  <version>3.5.0</version>
			  <configuration>
			    <mainClass>com.isma.crud.app.Main</mainClass>
			  </configuration>
			</plugin>

      </plugins>
      
  </build>
  

</project>
